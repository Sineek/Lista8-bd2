author_id:int(11)
title:varchar(255)
url:text
vote_count:smallint(5)

  [COMMENTS - ARRAY DE OBJETO]
  id:int(11)
  post_id:int(11)
  user_ud:int(11)
  text:text
  
  [IMAGES - ARRAY DE OBJETO]
  id:int(11)
  post_id:int(11)
  caption:int(11)
  type:varchar(255)
  size:mediumint(8)
  location:varchar(255)
  
  [POSTS_TAGS - ARRAY DE OBJETO]
  id:int(11)
  post_id:int(11)
  tag_id:int(11)
  
    [TAGS - ARRAY DE OBJETO]
    id:int(11)
    text:varchar(255)
    
